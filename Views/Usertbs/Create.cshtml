@model RayaHesab.Models.Usertb

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<form asp-action="Create" id="formaction">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group col-sm-3">
        <label asp-for="Namec" class="control-label">نام کاربری</label>
        <input asp-for="Namec" class="form-control" />
        <span asp-validation-for="Namec" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-3">
        <label asp-for="Pass" class="control-label">کلمه عبور</label>
        <input asp-for="Pass" class="form-control" type="password" />
        <span asp-validation-for="Pass" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-3">
        <label asp-for="Mobile" class="control-label">تلفن همراه</label>
        <input asp-for="Mobile" class="form-control" />
        <span asp-validation-for="Mobile" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-3">
        <label asp-for="Idanbar" class="control-label">فروشگاه</label>
        <select asp-for="Idanbar" class="form-control" asp-items="ViewBag.Idanbar"></select>
    </div>
    <div class="form-group">
        <input type="button" onclick="actionrow()" value="ایجاد" id="btnE" class="btn btn-warning btload" />
    </div>
</form>
