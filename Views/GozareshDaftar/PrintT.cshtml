@model IEnumerable<RayaHesab.Models.Taraz>

@{
    ViewData["Title"] = "گزارش اشخاص";
    Layout = "~/Views/Shared/_printtaraz.cshtml";
}
<div class="row " style="padding: 0 2em">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-5" style="padding-top:3em">
                <br />
                <p>از تاریخ : @ViewBag.fdate</p>
                <p>تا تاریخ : @ViewBag.tdate</p>
            </div>
            <div class="col-md-3 text-center">
                <p class="text-center">
                    <img src="~/images/Logop.png" class="imagep" />
                </p>
                <p class="text-center"><h4>@ViewData["Title"]</h4>
</p>
            </div>
            <div class="col-md-4" style="padding-top:5em">
                <br />
@*                <p>نوع گزارش : @ViewBag.where</p>*@
            </div>
        </div>
        <div class="row">

        </div>
        <div class="row">

        </div>

        <table id="myTable" class="table  borderbold">
            <thead>
                <tr>
                    <th>
                        ردیف
                    </th>
                    <th>
                        عنوان حساب
                    </th>
                    <th>
                        بدهکار طی دوره
                    </th>
                    <th>
                        بستانکار طی دوره
                    </th>
                    <th>
                        بدهکار
                    </th>
                    <th>
                        بستانکار
                    </th>
                </tr>
            </thead>
            <tbody>
                @{ 
                    int i = 0;
                    decimal bed = 0, bes = 0, bednow = 0, besnow = 0;
                    foreach (var item in Model)
                    {
                        i = i + 1;
                <tr>
                    <td>
                        @Html.Raw(i.ToString())
                    </td>
                    <td>
                        @Html.Raw(item.Nameperson)
                    </td>
                    <td>
                        @string.Format("{0:n0}", item.Bed)
                        @{bed = bed + item.Bed;} 
                    </td>
                    <td>
                        @string.Format("{0:n0}", item.Bes)
                        @{bes = bes + item.Bes;} 
                    </td>
                    <td>
                        @string.Format("{0:n0}", item.Bednow)
                        @{bednow = bednow + item.Bednow;}
                    </td>
                    <td>
                        @string.Format("{0:n0}", item.Besnow)
                        @{besnow = besnow + item.Besnow;}
                    </td>
                </tr>
                    }

                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2" class="text-left">جمع کل</td>
                    <td>@string.Format("{0:n0}", bed)</td>
                    <td>@string.Format("{0:n0}", bes)</td>
                    <td>@string.Format("{0:n0}", bednow)</td>
                    <td>@string.Format("{0:n0}", besnow)</td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>


