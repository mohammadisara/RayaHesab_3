@model RayaHesab.Models.Masterchack

<div class="row">
    <div class="col-md-12 DRight">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">عنوان چک</label>
                <input asp-for="Title" class="form-control" oninvalid="this.setCustomValidity('عنوان را وارد کنید')" oninput="setCustomValidity('')" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Frombarg" class="control-label">از شماره</label>
                <input asp-for="Frombarg" class="form-control" oninvalid="this.setCustomValidity('شماره را وارد کنید')" oninput="setCustomValidity('')" required />
                <span asp-validation-for="Frombarg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tobarg" class="control-label">تا شماره</label>
                <input asp-for="Tobarg" class="form-control" oninvalid="this.setCustomValidity('شماره را وارد کنید')" oninput="setCustomValidity('')" required />
                <span asp-validation-for="Tobarg" class="text-danger"></span>
            </div>
            @*<select asp-for="Bankid" class="form-control" asp-items="ViewBag.Bankid" hidden></select>*@
            <input type="hidden" asp-for="Bankid" value="@ViewBag.Bankid"/>
            <div class="form-group col-sm-12 modal-footer">
                <input type="submit" value="ثبت" class="btn btn-success btload" />
            </div>
        </form>
    </div>
</div>
