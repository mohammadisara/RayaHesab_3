
<div class="container-fluid">
    <table id="myTable" class="table table-striped">
        <thead>
            <tr>
                <th>
                    تاریخ
                </th>
                <th>
                    حساب
                </th>
                <th>
                    شخص
                </th>
                <th>
                    توضیحات
                </th>
                <th>
                    بدهکار
                </th>
                <th>
                    بستانکار
                </th>
                <th>
                    فروشگاه
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.sanad)
            {
                <tr>
                    <td>
                        @item.Pardar.Datec
                    </td>
                    <td>
                        @item.Moin.K.Codekol -
                        @item.Moin.Codemoin -
                        @(item.Taf == null ? "" : item.Taf.Codetaf)
                        (@item.Moin.K.Namekol -
                        @item.Moin.Namemoin -
                        @(item.Taf == null ? "" : item.Taf.Nametaf))
                    </td>
                    <td>
                        @(item.P == null ? "" : item.P.Namekamel)
                    </td>
                    <td>
                        @item.Note
                    </td>
                    <td>
                        @(item.Bed == null ? "" : string.Format("{0:n0}", @item.Bed)) 
                    </td>
                    <td>
                        @(item.Bes == null ? "" : string.Format("{0:n0}", @item.Bes)) 
                    </td>
                    <td>
                        @(item.IdanbarNavigation == null ? "" : item.IdanbarNavigation.Namec) 
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
