    function Edit(id) {
        $(".loading").hide();
        $(".loading").show();
        $.ajax({
            url: "/Pardartbs/Edit/" + id,
            type: "Get"
        }).done(function (result) {
            $("#MyModal").modal("show");
            $("#ModalTittle").html("ویرایش");
            $("#ModalBody").html(result);
            $(".loading").hide();
            loadcoding();
            loadcodingBes();
            $(".DateText , .DateTextE").pDatepicker({
                initialValueType: 'persian',
                calendar: {
                    persian: {
                        locale: 'en'
                    }
                },
                autoClose: true,
                format: 'YYYY/MM/DD'
            });

        });
    };
    function Details(id) {
        $(".loading").show();
        $.ajax({
            url: "/AsnadDar/Details/" + id,
            type: "Get"
        }).done(function (result) {
            $("#MyModal").modal("show");
            $("#ModalTittle").html("نمایش");
            $("#ModalBody").html(result);
            $(".loading").hide();
        });
    };
    function Delete(id) {
        var q = confirm('ایا مطمئن هستید');
        if (q) {
             
            $(".loading").show();
            $.post("/AsnadDar/Delete/" + id, null, function (data) {
                $(".loading").hide();
                if (data.msg == "") {
                    getsanaddar();
                }
                else {
                    $(".errmsg").html(data.msg);
                    $(".errdetail").html(data.err);
                    $("#err").modal('show');
                }
            });
            $(".loading").hide();

        }
    };
    $(function () {
        $(".mytable").tablesorter({
            theme: 'blue',
            widthFixed: true,                // initialize zebra and filter widgets
            widgets: ["zebra", "filter", "math"],
            widgetOptions: {
                math_mask: '#,##0.',
                filter_reset: '.reset'
            }
        });
    })

</script>
