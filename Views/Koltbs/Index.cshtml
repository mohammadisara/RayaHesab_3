
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<div class="table-responsive-lg">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    کد و عنوان کل
                </th>
                <th>
                    <a href="#" onclick="Createkol()" class="show-modal" data-id="modalform">
                        <i class="fa fa-plus-square fa-2x" aria-hidden="true" data-toggle="tooltip" title="تعریف کل جدید"></i>
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @{ if (ViewBag.kol != null)
                {
                    foreach (var item in ViewBag.kol)
                    {
                        <tr>
                            <td>
                                <a href="#" onclick="loadmoin(@item.Mid)" >
                                    @item.Codekol - @item.Namekol
                                </a>
                            </td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" aria-haspopup="true" aria-expanded="false" data-toggle="dropdown" class="mb-2 mr-2 dropdown-toggle btn btn-info"><i class="fa fa-cog"></i></button>

                                    <div class="dropdown-menu">
                                        <a href="#" class="dropdown-item" onclick="Editkol(@item.Mid)">
                                            ویرایش
                                        </a>
                                        <a href="#" onclick="Deletekol(@item.Mid)" class="dropdown-item">
                                            حذف
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>


