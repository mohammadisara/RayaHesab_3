@model RayaHesab.Models.Anbartb

<form asp-action="Create" onsubmit="return validatecoding"  id="formaction">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="Mid" class="control-label">کد انبار</label>
            <input asp-for="Mid" id="txtmid" onkeypress="handle(event,'txtname')" class="form-control" autofocus oninvalid="this.setCustomValidity('کد انبار وارد کنید')" oninput="setCustomValidity('')" required />
            <span asp-validation-for="Mid" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Namec" class="control-label">عنوان</label>
            <input asp-for="Namec" id="txtname" onkeypress="handle(event,'txtmoin')" class="form-control" oninvalid="this.setCustomValidity('عنوان انبار وارد کنید')" oninput="setCustomValidity('')" required />
            <span asp-validation-for="Namec" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="Moinid" style="display:block" class="control-label">کد حساب (کل و معین و تفصیلی)</label>
            <div class="autocomplete" style="display:block;">
                <input onkeypress="handle(event,'txttaf')" id="txtmoin" type="text" class="form-control" name="txtmoin">
            </div>
            <span class="spanzir" id="namemoin">*</span>
            <input asp-for="Moinid" type="hidden" id="hfmoinid" />
            <input asp-for="Tafid" type="hidden" id="hftafid" />

        </div>
    </div>
    <hr />
    <div class="form-group col-sm-12">
        <input type="button" onclick="actionrow()" value="ثبت" id="btn" class="btn btn-primary  hide-modal " data-id="modalform" />
    </div>
</form>
