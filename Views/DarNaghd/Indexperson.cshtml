                $("#txtmoinBE").prop('disabled', false);
            if ($("#txtpersonSE").val() != "") {
                $("#txtmoinSE").prop('disabled', true);
                $("#hfmoinidSE").val("");
                $("#hftafidSE").val("");
            }
            else
                $("#txtmoinSE").prop('disabled', false);
        }
        function hesabchange() {
            if ($("#txtmoinB").val() != "") {
                $("#txtpersonB").prop('disabled', true);
                $("#hfpersonidB").val("");
            }
            else
                $("#txtpersonB").prop('disabled', false);
            if ($("#txtmoinS").val() != "") {
                $("#txtpersonS").prop('disabled', true);
