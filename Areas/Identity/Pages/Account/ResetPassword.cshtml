@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "تغییر کلمه عبور";
    Layout = Request.Cookies["layoutmain"];

}

<h4>بازیابی کلمه عبور @ViewData["user"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input  type="hidden" value="@ViewBag.id" asp-for="Input.Id" />
            <input  type="hidden" value="@ViewBag.code"  asp-for="Input.code" />
            
            <div class="form-group">
                <label asp-for="Input.Password">کلمه عبور</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">تکرار کلمه عبور</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <hr />
            <button type="submit" class="btn btn-primary">بازیابی</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
